@model Blogcum.Models.Blogcular
@{
    ViewBag.Title = "BlogcuSil";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>BlogcuSil</h2>
<hr />

<p>
    Silmek istediğinizden emin misiniz ?

</p>



    <table>
        <tr>
            <td> <b>  Blogcu Adı : </b> </td>
            <td> @Model.BlogcuAdi </td>
        </tr>

        <tr>
            <td>  <b>  Blogcu Soyadı : </b> </td>
            <td> @Model.BlogcuSoyadi </td>
        </tr>
    </table>
    <br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="input-group ">
        <input type="submit" value="Sil" class="btn btn-warning" />

    </div>

    <br />
}
    <div class="input-group">
        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status" role="alert">
                @ViewBag.Result
            </div>

        }

    </div>


